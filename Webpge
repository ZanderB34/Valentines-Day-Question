  <!-- SECRET LOVE LETTER PAGE -->
  <div class="card" id="secretPage">
    <h1>ðŸ’Œ Secret Page ðŸ’Œ</h1>
    <p>
      <!-- WRITE YOUR LOVE LETTER HERE -->
      This is where you write your heartfelt message.
      You can talk about memories, inside jokes, or why
      they matter to you.
    </p>
    <button class="back-btn" onclick="goBack()">Go Back</button>
  </div>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const question = document.getElementById('question');
    const subtext = document.getElementById('subtext');
    const needohImg = document.getElementById('needohImg');

    let noScale = 1;
    let yesStage = 0;

    const yesTexts = [
      'Yes',
      'Are you sure?',
      'Like REALLY sure?',
      'Last chance ðŸ˜³',
      'Okay you mean it ðŸ’•'
    ];

    noBtn.addEventListener('click', () => {
      noScale -= 0.15;
      noBtn.style.transform = `scale(${noScale})`;

      if (noScale <= 0.2) {
        noBtn.style.display = 'none';
        subtext.textContent = 'The universe has decided.';
      }
    });

    yesBtn.addEventListener('click', () => {
      yesStage++;

      if (yesStage < yesTexts.length) {
        yesBtn.textContent = yesTexts[yesStage];
        question.textContent = 'Soâ€¦ will you be my Valentine? ðŸ’˜';
      } else {
        question.textContent = 'YAY!!! ðŸ’•ðŸ¥°';
        subtext.textContent = 'Best decision ever.';
        yesBtn.style.display = 'none';
        noBtn.style.display = 'none';
      }
    });

    // SECRET PAGE TRIGGER (clicking the Needoh image)
    needohImg.addEventListener('click', () => {
      document.getElementById('mainPage').style.display = 'none';
      document.getElementById('secretPage').style.display = 'block';
    });

    function goBack() {
      document.getElementById('secretPage').style.display = 'none';
      document.getElementById('mainPage').style.display = 'block';
    }
  </script>

